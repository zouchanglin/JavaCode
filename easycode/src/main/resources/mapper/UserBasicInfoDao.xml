<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserBasicInfoDao">

    <resultMap type="com.example.demo.entity.UserBasicInfo" id="UserBasicInfoMap">
        <result property="openId" column="open_id" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userCity" column="user_city" jdbcType="VARCHAR"/>
        <result property="userPhone" column="user_phone" jdbcType="VARCHAR"/>
        <result property="userIcon" column="user_icon" jdbcType="VARCHAR"/>
        <result property="userGrade" column="user_grade" jdbcType="OTHER"/>
        <result property="userSex" column="user_sex" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserBasicInfoMap">
        select
          open_id, user_name, user_city, user_phone, user_icon, user_grade, user_sex
        from buckmoo.user_basic_info
        where open_id = #{openId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserBasicInfoMap">
        select
          open_id, user_name, user_city, user_phone, user_icon, user_grade, user_sex
        from buckmoo.user_basic_info
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserBasicInfoMap">
        select
          open_id, user_name, user_city, user_phone, user_icon, user_grade, user_sex
        from buckmoo.user_basic_info
        <where>
            <if test="openId != null and openId != ''">
                and open_id = #{openId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userCity != null and userCity != ''">
                and user_city = #{userCity}
            </if>
            <if test="userPhone != null and userPhone != ''">
                and user_phone = #{userPhone}
            </if>
            <if test="userIcon != null and userIcon != ''">
                and user_icon = #{userIcon}
            </if>
            <if test="userGrade != null">
                and user_grade = #{userGrade}
            </if>
            <if test="userSex != null">
                and user_sex = #{userSex}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="openId" useGeneratedKeys="true">
        insert into buckmoo.user_basic_info(user_name, user_city, user_phone, user_icon, user_grade, user_sex)
        values (#{userName}, #{userCity}, #{userPhone}, #{userIcon}, #{userGrade}, #{userSex})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update buckmoo.user_basic_info
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userCity != null and userCity != ''">
                user_city = #{userCity},
            </if>
            <if test="userPhone != null and userPhone != ''">
                user_phone = #{userPhone},
            </if>
            <if test="userIcon != null and userIcon != ''">
                user_icon = #{userIcon},
            </if>
            <if test="userGrade != null">
                user_grade = #{userGrade},
            </if>
            <if test="userSex != null">
                user_sex = #{userSex},
            </if>
        </set>
        where open_id = #{openId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from buckmoo.user_basic_info where open_id = #{openId}
    </delete>

</mapper>